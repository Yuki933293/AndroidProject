<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--开关按钮关闭时的导轨样式-->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="@dimen/switch_width" android:height="@dimen/switch_height" />
            <corners android:radius="@dimen/track_circle" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/grey_switch_off" />
            <padding android:left="1dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="@dimen/switch_width" android:height="@dimen/switch_height" />
            <corners android:radius="@dimen/track_circle" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/blue_switch_on" />
            <padding android:right="1dp" />
        </shape>
    </item>
</selector>