<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="@dimen/switch_height" android:height="@dimen/switch_height" />
            <solid android:color="@color/grey_thumb_off" />
            <stroke android:width="@dimen/thumb_stroke_width" android:color="@android:color/transparent" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="@dimen/switch_height" android:height="@dimen/switch_height" />
            <solid android:color="@color/blue_switch_on" />
            <stroke android:width="@dimen/thumb_stroke_width" android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>